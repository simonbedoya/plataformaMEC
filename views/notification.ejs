<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./partials/head %>
</head>


<body  onload="load('<%= user%>')">
<!-- Aside Start-->
<aside class="left-panel">

    <!-- brand -->
    <div class="logo">
        <a href="/index" class="logo-expanded">
            <i class="ion-social-buffer"></i>
            <span class="nav-label">Plataforma MEC</span>
        </a>
    </div>
    <!-- / brand -->

    <!-- Navbar Start -->
    <nav class="navigation">
        <ul class="list-unstyled">
            <li class=""><a href="/index"><i class="ion-home"></i> <span class="nav-label">Inicio</span></a></li>
            <li class=""><a href="/network"><i class="ion-network"></i> <span class="nav-label">Redes</span></a></li>
            <li class=""><a href="/sensor"><i class="ion-disc"></i> <span class="nav-label">Sensores</span></a></li>
            <li class=""><a href="/alert"><i class="ion-android-alarm"></i> <span class="nav-label">Alertas</span></a></li>
            <li class="active"><a href="/notification"><i class="ion-ios7-bell-outline"></i> <span class="nav-label">Notificaciones</span></a></li>
            <li class=""><a href="/historical"><i class="ion-document-text"></i> <span class="nav-label">Histórico</span></a></li>
            <li class=""><a href="/settings"><i class="ion-settings"></i> <span class="nav-label">Configuración</span></a></li>
        </ul>
    </nav>

</aside>
<!-- Aside Ends-->


<!--Main Content Start -->
<section class="content">

    <% include ./partials/header %>

    <!-- Page Content Start -->
    <!-- ================== -->

    <div class="wraper container-fluid">
        <div class="page-title">
            <h3 class="title">Notificaciones</h3>
        </div>

        <div class="row">

            <!-- Left sidebar -->
            <div class="col-md-3">

                <div class="panel panel-default p-0" style="margin-top: 55px;">
                    <div class="panel-body p-0">
                        <div class="list-group no-border mail-list">
                            <a onclick="load('<%= user%>')" class="list-group-item active"><i class="fa fa-download m-r-5"></i>Recibidos <b id="numberNoRead"></b></a>
                        </div>
                    </div>
                </div>

                <h3 class="panel-title m-t-10">Filtrar</h3>
                <div class="panel panel-default p-0  m-t-20">
                    <div class="panel-body p-0">
                        <div class="list-group no-border">
                            <a onclick="loadDataNotificationByTag('<%= user%>','FILE')" class="list-group-item"><span class="fa fa-circle text-success pull-right"></span>Archivos</a>
                            <a onclick="loadDataNotificationByTag('<%= user%>','EVENT')" class="list-group-item"><span class="fa fa-circle text-danger pull-right"></span>Eventos</a>
                            <a onclick="loadDataNotificationByTag('<%= user%>','ALERT')" class="list-group-item"><span class="fa fa-circle text-info pull-right"></span>Alertas</a>
                            <a onclick="loadDataNotificationByTag('<%= user%>','ERROR')" class="list-group-item"><span class="fa fa-circle text-warning pull-right"></span>Errores</a>
                            <a onclick="loadDataNotificationByTag('<%= user%>','STATUS')" class="list-group-item"><span class="fa fa-circle text-purple pull-right"></span>Estados</a>
                        </div>
                    </div>
                </div>

            </div>
            <!-- End Left sidebar -->


            <!-- Right Sidebar -->
            <div class="col-md-9" id="blockMessages">
                <div class="row">
                    <div class="col-lg-2">
                        <div class="btn-toolbar" role="toolbar">
                            <div class="btn-group">
                                <button type="button" class="btn btn-inverse" onclick="deleteNotification('<%= user%>')"><i class="fa fa-trash-o"></i></button>
                            </div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-inverse dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    Mas
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a onclick="markNotification('<%= user%>',true)">Marcar como leido</a></li>
                                    <li><a onclick="markNotification('<%= user%>',false)">Marcar como no leido</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-1 m-t-5 hidden" id="loadingNotification">
                        <i class="ion-loading-c ion text-inverse fa-2x"></i>
                    </div>

                </div> <!-- End row -->

                <!-------------------------------------- Listado mensajes ----------------------------------------------->
                <div class="panel panel-default m-t-20">
                    <div class="panel-body">

                        <table class="table table-hover mails hidden-table" id="tableNotification">
                            <tbody>

                            </tbody>
                        </table>

                        <hr>

                        <div class="row">
                            <div class="col-xs-7" id="numberNotification">
                                Mostrando 0 - 0 de 0
                            </div>
                            <div class="col-xs-5">
                                <div class="btn-group pull-right">
                                    <button type="button" class="btn btn-default"><i class="fa fa-chevron-left"></i></button>
                                    <button type="button" class="btn btn-default"><i class="fa fa-chevron-right"></i></button>
                                </div>
                            </div>
                        </div>

                    </div> <!-- panel body -->
                </div> <!-- panel -->
            </div> <!-- end Col-9 -->

        </div><!-- End row -->


    </div> <!-- END Wraper -->
    <!-- Footer Start -->
    <footer class="footer">
        2016 © Plataforma MEC.
    </footer>
    <!-- Footer Ends -->
</section>
<!-- Main Content Ends -->

<% include ./partials/scripts %>

<script src="js/functions/notification.js"></script>

</>
</html>